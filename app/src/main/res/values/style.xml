<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="whiteTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/eleven</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>

    </style>

    <style name="blackTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/eleven</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="editText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">@dimen/eleven</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingTop">@dimen/five_margin</item>
        <item name="android:paddingBottom">@dimen/five_margin</item>
        <item name="android:paddingEnd">@dimen/five_margin</item>
        <item name="android:paddingStart">@dimen/five_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>

    </style>

    <style name="layout" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/edit_text_radius_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/five_margin</item>
        <item name="elevation">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/five_margin</item>
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="button" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/button_radius_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_marginTop">@dimen/twenty_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="searchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:maxLines">1</item>
        <item name="boxStrokeColor">@color/white</item>

        <item name="android:paddingBottom">4dp</item>
        <item name="paddingStart">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>


    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/un_rating_bar_color</item>
        <item name="colorControlActivated">@color/rating_bar_color</item>
    </style>
</resources>